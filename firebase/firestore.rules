rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() { return request.auth != null; }
    function uid() { return request.auth.uid; }
    function isAdmin() {
      return signedIn()
        && exists(/databases/$(database)/documents/users/$(uid()))
        && get(/databases/$(database)/documents/users/$(uid())).data.role == "admin";
    }

    match /categories/{slug} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if signedIn() && userId == uid();
      allow create: if signedIn() && userId == uid();
      allow update: if signedIn() && userId == uid() && !("role" in request.resource.data);
      allow delete: if false;
    }

    match /posts/{postId} {
      allow read: if true;

      allow create: if signedIn()
        && request.resource.data.authorUid == uid()
        && request.resource.data.status == "active"
        && request.resource.data.title is string
        && request.resource.data.body is string;

      allow update, delete: if isAdmin();

      match /votes/{voterId} {
        allow read: if signedIn() && voterId == uid();
        allow write: if signedIn() && voterId == uid();
      }

      match /comments/{commentId} {
        allow read: if true;

        allow create: if signedIn()
          && request.resource.data.authorUid == uid()
          && request.resource.data.status == "active"
          && request.resource.data.body is string;

        allow update, delete: if isAdmin();

        match /votes/{voterId} {
          allow read: if signedIn() && voterId == uid();
          allow write: if signedIn() && voterId == uid();
        }
      }
    }

    match /reports/{reportId} {
      allow read: if isAdmin();
      allow create: if signedIn()
        && request.resource.data.reporterUid == uid()
        && request.resource.data.status == "open";
      allow update, delete: if isAdmin();
    }
  }
}
